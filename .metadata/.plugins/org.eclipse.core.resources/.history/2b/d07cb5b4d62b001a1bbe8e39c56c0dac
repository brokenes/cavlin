package com.github.admin.handle;

import org.apache.commons.lang3.StringUtils;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.web.bind.annotation.ControllerAdvice;
import org.springframework.web.bind.annotation.ExceptionHandler;
import org.springframework.web.bind.annotation.ResponseBody;

import com.github.admin.common.exception.AccountNotFoundException;
import com.github.admin.common.utils.ResultVo;

//@ControllerAdvice
public class ExceptionHandle {
	
	
	private Logger logger = LoggerFactory.getLogger(this.getClass());
	
//	@ExceptionHandler(value = Exception.class)
//    @ResponseBody
	public ResultVo handleException(RuntimeException e) {
		ResultVo resultVo = new ResultVo();
		resultVo.setData("");
		resultVo.setCode("0");
		resultVo.setSuccess(false);
		if(e instanceof AccountNotFoundException) {
			logger.error("当前账号不存在!");
			resultVo.setMsg(StringUtils.isNotBlank(e.getMessage()) ? e.getMessage():"当前账号不存在");
		}else {
			resultVo.setMsg("系统异常，请联系管理员！");
		}
		return resultVo;
	}

}
