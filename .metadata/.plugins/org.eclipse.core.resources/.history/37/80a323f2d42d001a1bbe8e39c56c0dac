public interface PermissionService {
	
	/***
	 * 根据系统ID和用户ID查询权限
	 * @param systemId
	 * @param userId
	 * @return
	 */
	ModelResult<List<Permission>> selectPermissionByUserId(Integer systemId, Integer userId);

}
